<html lang="en">
<head>
    <% include ../partials/head %>
</head>

<body>

  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="#">Home</a></li>
    <li role="presentation"><a href="post">Post a Message</a></li>
    <li role="presentation"><a href="read">Read Messages</a></li>
    <button id = "login-button" class="btn btn-success" type="button" onclick="toggleSignIn()">
      Sign in.
    </button>
  </ul>

  <!-- the classes 'page-header' and 'btn btn-default' create bootstrap components.  -->
  <!-- Check out more components here: http://getbootstrap.com/components/ -->
  <div class="page-header">
    <h1>Welcome to the Message Board!</h1>
    <h3>Log in, post a message, read some messages, it's the best thing in the world!</h3>
  </div>

  <section id="add-post">
    <h2 class="mdl-card__title-text">
      New Post
    </h2>

    <form id="message-form" action="#">
      <div class = "form-group">
        <label for="new-post-title">
          Post title:
        </label>
        <input type="text" id="new-post-title">
      </div>

      <div class ="form-group">
        <textarea rows = "3" id="new-post-body" placeholder="Type your message here..."></textarea>
      </div>

      <button type="submit" class="btn btn-default" onclick="handleMessageFormSubmit()">
        Send post!
      </button>
    </form>
  </section>

  <div id = "stream">
    Messages:
  </div>


  <div id="doge-image"/>

</body>
</html>